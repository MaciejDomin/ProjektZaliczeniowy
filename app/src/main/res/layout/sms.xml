<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    tools:context=".Sms">

    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Podaj numer telefonu"
        android:id="@+id/podajnumertelefonu"></TextView>

    <EditText
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:id="@+id/numertelefonu"
        android:layout_below="@+id/podajnumertelefonu"
        android:inputType="phone"
        ></EditText>
    <TextView
        android:layout_width="150dp"
        android:layout_height="30dp"
        android:text="Napisz wiadomość"
        android:id="@+id/napiszwiadomosc"
        android:layout_below="@+id/numertelefonu"></TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/wiadomosc"
        android:layout_below="@+id/napiszwiadomosc"
        ></EditText>

    <Button
        android:id="@+id/button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyślij smsa"
        android:layout_below="@+id/wiadomosc"

        />

    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Podaj maila"
        android:id="@+id/podajmaila"
        android:layout_below="@+id/button"></TextView>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/adresemail"
        android:layout_below="@+id/podajmaila"
        android:inputType="textEmailAddress"
        ></EditText>



    <TextView
        android:layout_width="200dp"
        android:layout_height="30dp"
        android:text="Napisz wiadomość e-mail"
        android:id="@+id/email"
        android:layout_below="@+id/adresemail"></TextView>


    <EditText
        android:layout_width="300dp"
        android:layout_height="150dp"
        android:id="@+id/mail"
        android:layout_below="@+id/email"
        ></EditText>
    <Button
        android:id="@+id/button2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Wyślij maila"
        android:layout_below="@+id/mail"/>


</RelativeLayout>
